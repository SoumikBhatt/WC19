<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".view.view.fragments.LiveTVFragment">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#232882">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Live TV"
                  android:textStyle="bold"
                  android:layout_centerInParent="true"
                  android:fontFamily="serif-monospace"
                  android:textAllCaps="true"
                  android:textColor="@android:color/white"
                  android:textSize="16sp"/>

    </RelativeLayout>

    <ScrollView
            android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical">

        <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="10dp">

            <ImageView
                    android:id="@+id/iv_channel_icon1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/btv"
                    android:scaleType="centerCrop"/>

            <View android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="#6A000000"></View>

            <RelativeLayout android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp">
                <TextView
                        android:id="@+id/tv_channel_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BTV"
                        android:textSize="30sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="serif-monospace"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:layout_above="@id/tv_team_rank"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentBottom="true"
                />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="10dp">

            <ImageView
                    android:id="@+id/iv_channel_icon2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/gtv"
                    android:scaleType="centerCrop"/>

            <View android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="#6A000000"></View>

            <RelativeLayout android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp">
                <TextView
                        android:id="@+id/tv_channel_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GTV"
                        android:textSize="30sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="serif-monospace"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentBottom="true"
                />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="10dp">

            <ImageView
                    android:id="@+id/iv_channel_icon3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/masranga"
                    android:scaleType="centerCrop"/>

            <View android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="#6A000000"></View>

            <RelativeLayout android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp">
                <TextView
                        android:id="@+id/tv_channel_name3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Masranga TV"
                        android:textSize="30sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="serif-monospace"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentBottom="true"
                />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="10dp">

            <ImageView
                    android:id="@+id/iv_channel_icon4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/star_sports"
                    android:scaleType="centerCrop"/>

            <View android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="#6A000000"></View>

            <RelativeLayout android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp">
                <TextView
                        android:id="@+id/tv_channel_name4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Star Sports"
                        android:textSize="30sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="serif-monospace"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentBottom="true"
                />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="10dp">

            <ImageView
                    android:id="@+id/iv_channel_icon5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/sony_liv"
                    android:scaleType="centerCrop"/>

            <View android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="#6A000000"></View>

            <RelativeLayout android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp">
                <TextView
                        android:id="@+id/tv_channel_name5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sony Liv"
                        android:textSize="30sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="serif-monospace"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentBottom="true"
                />

            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>
    </ScrollView>
</LinearLayout>