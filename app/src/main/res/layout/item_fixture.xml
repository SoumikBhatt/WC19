<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

    <android.support.v7.widget.CardView
            android:id="@+id/cv_m_one"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            app:cardCornerRadius="10dp"
            android:layout_below="@id/top_layout"
            app:cardUseCompatPadding="true">

    <RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_schedule">
    <ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/oval"
    android:scaleType="centerCrop"/>

    <View android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#75000000"></View>

    <TextView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Match 1, ICC cricket world cup 2019"
    android:textAllCaps="true"
    android:textColor="#FFFFFF"
    android:layout_marginTop="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:textAlignment="center"
    android:fontFamily="serif-monospace"
    android:id="@+id/tv_match_number"
    android:textStyle="bold"
    />

    <TextView
    android:text="Match Day: May 30, Thursday"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAlignment="center"
    android:id="@+id/tv_match_day"
    app:fontFamily="serif-monospace"
    android:layout_marginTop="3dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:textColor="#FFFFFF"
    android:layout_below="@+id/tv_match_number"
    android:textAllCaps="true"
    android:textStyle="bold"/>

    <ImageView
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:id="@+id/iv_team_one"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="75dp"/>

    <ImageView
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:id="@+id/iv_team_two"
    android:scaleType="centerCrop"
    android:layout_marginTop="75dp"
    android:layout_marginRight="15dp"
    android:layout_alignParentEnd="true" android:layout_alignParentRight="true"/>

    <LinearLayout
    android:id="@+id/ll_fixture"
    android:layout_width="wrap_content"
    android:layout_height="75dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="80dp"
    android:orientation="vertical">

    <TextView
    android:text="England"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/tv_team_name_one"
    android:textColor="#FFFFFF"
    android:layout_gravity="center"
    app:fontFamily="serif-monospace"
    android:layout_marginBottom="5dp"
    android:textStyle="bold"
    android:textSize="16sp"/>

    <TextView
    android:text="V"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/tv_versus"
    android:textColor="#FFFFFF"
    android:layout_marginBottom="5dp"
    android:layout_gravity="center"
    app:fontFamily="serif-monospace"
    android:textStyle="bold"
    android:layout_marginTop="5dp"
    android:textSize="14sp"/>

    <TextView
    android:text="South Africa"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/tv_team_name_two"
    android:textColor="#FFFFFF"
    android:layout_gravity="center"
    android:layout_marginTop="5dp"
    app:fontFamily="serif-monospace"
    android:textStyle="bold"
    android:textSize="16sp"/>
    </LinearLayout>

    <TextView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tv_match_time"
    android:text="@string/day_time"
    android:textColor="#FFFFFF"
    android:fontFamily="serif-monospace"
    android:textAllCaps="true"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="28dp"
    android:textStyle="bold"
    android:textAlignment="center"
    android:layout_below="@id/ll_fixture"/>

    <TextView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tv_match_venue"
    android:text="@string/venue_oval"
    android:textColor="#FFFFFF"
    android:fontFamily="serif-monospace"
    android:textAllCaps="true"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="5dp"
    android:textStyle="bold"
    android:layout_below="@id/tv_match_time"
    android:textAlignment="center"
    android:layout_marginTop="5dp"/>

    </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>